# XSS Attempt Detection
alert http any any -> any any (msg:"Cross-Site Scripting Detected"; flow:established,to_server; content:"<script>"; nocase; http_uri; classtype:web-application-attack; sid:2200001;)

# SQL Injection Attempt Detection
alert http any any -> any any (msg:"SQL Injection Detected"; flow:established,to_server; content:"select"; nocase; http_uri; pcre:"/(\-\-)|(\#)|(\%23)|(\')|(\%27)/i"; classtype:web-application-attack; sid:2200002;)

# Directory Traversal Attempt Detection
alert http any any -> any any (msg:"Directory Traversal Attempt Detected"; flow:established,to_server;  pcre:"/(\.\.\/)+.*/i"; classtype:web-application-attack; sid:2200003; rev:1;)

# File Inclusion Detection
alert http any any -> any any (msg:"WEB File Inclusion Detected"; flow:established,to_server;  pcre:"/(..\/)+[a-z0-9_\-]+\.(php|txt)/i"; classtype:web-application-attack; sid:2200004; rev:1;)

# Command Injection Detection
alert http any any -> any any (msg:"WEB Command Injection Detected"; flow:established,to_server; pcre:"/%3B(.)*(ls|cat|cd)/i"; classtype:web-application-attack; sid:2200005; rev:1;)
